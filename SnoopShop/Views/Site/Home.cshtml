<div class="tab-products">
    <div class="container-91">
        <div class="title">Sản phẩm theo danh mục</div>
        <div class="tab-tab-tab">
            <ul class="nav nav-pills" id="pills-tab" role="tablist">
                @{ var i = 0;}
                @foreach (var cat in Model)
                {
                    <li class="nav-item" role="presentation">
                        <a class="nav-link @(i == 0 ? "active" : "")" 
                           id="tab-tab-@cat.ID" 
                           data-toggle="pill" 
                           href="#tab-@cat.ID" 
                           role="tab" 
                           aria-controls="tab-tab-tab-@cat.ID" 
                           aria-selected="true">@cat.Name</a>
                    </li>
                    i++;
                }
            </ul>

            <div class="tab-content" id="pills-tabContent">
                @{ i = 0;}
                @foreach (var cat in Model)
                {
                    <div class="tab-pane fade show @(i == 0 ? "active" : "") " 
                         id="tab-@cat.ID" 
                         role="tabpanel" 
                         aria-labelledby="tab-tab-@cat.ID">
                        @Html.Action("ProductHome", "Site", new { catid = cat.ID })
                    </div>
                    i++;
                }
            </div>
        </div>
    </div>
</div>
