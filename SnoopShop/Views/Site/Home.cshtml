<div class="promo-so">
    <div class="container-91 h3 text-center font-weight-bold mb-2" style="color:#d0021b;">
        @*<img src="~/Public/images/sliders/title.png" alt="" class="d-block  m-auto pb-2">*@
        BÁN CHẠY NHẤT
    </div>
    <div class="container-91 taiche">
        <div id="owl-wrap" class="owl-carousel owl-theme">
            @foreach (var p in ViewBag.PromotionProduct)
            {
                <div class="p-item" style="padding: 20px 10px 0 10px !important;">
                    <a href="@p.Slug">
                        <div class="p-img">
                            @*@if (p.Installment == 1)
                            {
                                <div class="anw">Trả góp <span class="font-weight-bold">0%</span></div>
                            }*@
                            <img src="~/Public/images/products/@p.Image" alt="" class="beau">
                        </div>
                        <div class="couple">
                            @if (p.Discount == 1)
                            {
                                <img src="~/Public/images/online-giảm-sốc-1x.png" alt="" class="h-100">}
                        </div>
                        <div class="p-np text-center" style="font-size: 16px; font-weight:bold;">
                            @p.Name
                        </div>
                        <div class="p-price">
                            <div class="price text-center">
                                @String.Format("{0:0,0₫}", p.ProPrice)
                            </div>
                            <div class="" style="display:flex; justify-content:center;">
                                <div class="old-price text-center">
                                    @String.Format("{0:0,0₫}", p.Price)
                                </div>
                                <div class="khongbietdattenlagi text-center">
                                    (-@String.Format("{0:0}", ((p.Price - p.ProPrice) / p.Price * 100))%)
                                </div>
                            </div>                            
                        </div>
                    </a>
                </div>         
            }
        </div>
    </div>
</div>


